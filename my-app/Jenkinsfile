pipeline {
    agent any

    environment {
        NODE_VERSION = '18'  // Change this based on your project requirements
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    echo 'Checking out the repository...'
                    checkout scm
                }
            }
        }

        stage('Setup Node.js') {
            steps {
                script {
                    echo "Using Node.js version: ${NODE_VERSION}"
                    sh "nvm install ${NODE_VERSION} && nvm use ${NODE_VERSION}"
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    echo 'Installing dependencies...'
                    sh 'npm install'
                }
            }
        }

        stage('Run Linting') {
            steps {
                script {
                    echo 'Running lint checks...'
                    sh 'npm run lint'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    echo 'Running tests...'
                    sh 'npm test'
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    echo 'Building the application...'
                    sh 'npm run build'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo 'Deploying the application...'
                    sh 'echo Deployment process goes here'
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs for errors.'
        }
    }
}
