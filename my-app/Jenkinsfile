pipeline {
    agent any

    tools {
        nodejs 'NodeJS-18'  // Use the name you configured in Jenkins
    }

    stages {
        stage('Setup Node.js') {
            steps {
                echo 'Using Node.js from Jenkins Plugin'
                sh 'node -v'
                sh 'npm -v'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Linting') {
            steps {
                sh 'npm run lint'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deployment step here'
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed. Check logs for errors.'
        }
    }
}
