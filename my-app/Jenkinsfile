pipeline {
    agent any

    environment {
        NODEJS_HOME = tool 'NodeJS-18'
        PATH = "${NODEJS_HOME}/bin:${env.PATH}"
        NODE_OPTIONS = "--max-old-space-size=4096"
    }

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    def projectDir = 'my-app'

                    sh 'npm cache clean --force'

                    if (fileExists("package.json")) {
                        echo "Installing dependencies in root"
                        sh '''
                        rm -rf node_modules package-lock.json || true
                        npm install --verbose > npm-install.log 2>&1 || cat npm-install.log
                        '''
                    } 
                    else if (fileExists("${projectDir}/package.json")) {
                        echo "Installing dependencies in ${projectDir}"
                        dir(projectDir) {
                            sh '''
                            rm -rf node_modules package-lock.json || true
                            npm install
                            '''
                        }
                    } else {
                        error("package.json not found, aborting.")
                    }
                }
            }
        }

        stage('Run Tests') {
            when { expression { return fileExists('my-app/package.json') || fileExists('package.json') } }
            steps {
                script {
                    if (fileExists('my-app/package.json')) {
                        dir('my-app') { 
                            sh 'npm test || exit 1'
                        }
                    } else {
                        sh 'npm test || exit 1'
                    }
                }
            }
        }

        stage('Build') {
            when { expression { return fileExists('my-app/package.json') || fileExists('package.json') } }
            steps {
                script {
                    if (fileExists('my-app/package.json')) {
                        dir('my-app') { 
                            sh 'npm run build || exit 1'
                        }
                    } else {
                        sh 'npm run build || exit 1'
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo 'Starting application on port 3000...'
                    sh '''
                    nohup npm run start > app.log 2>&1 &
                    echo $! > app.pid
                    sleep 10
                    if ! curl -Is http://localhost:3000; then
                        echo "App failed to start!"
                        exit 1
                    fi
                    '''

                    echo 'Starting ngrok for public access...'
                    sh '''
                    nohup ngrok http 3000 --region=in --hostname=d27f-106-51-157-202.ngrok-free.app > ngrok.log 2>&1 &
                    sleep 10
                    if ! curl -Is https://d27f-106-51-157-202.ngrok-free.app; then
                        echo "Ngrok is not responding"
                        exit 1
                    fi
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs for errors.'
        }
    }
}
