pipeline {
    agent any
    environment {
        NODEJS_HOME = tool 'NodeJS-18'
        PATH = "${NODEJS_HOME}/bin:${env.PATH}"
    }
    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    def projectDir = 'my-app'
                    sh 'npm cache clean --force'
                    if (fileExists("package.json")) {
                        echo "Installing dependencies in root"
                        sh '''
                        rm -rf node_modules package-lock.json
                        npm install
                        '''
                    }
                    else if (fileExists("${projectDir}/package.json")) {
                        echo "Installing dependencies in ${projectDir}"
                        dir(projectDir) {
                            sh '''
                            rm -rf node_modules package-lock.json
                            npm install
                            '''
                        }
                    } else {
                        error("package.json not found, aborting.")
                    }
                }
            }
        }
        stage('Run Tests') {
            when { expression { return fileExists('my-app/package.json') || fileExists('package.json') } }
            steps {
                script {
                    if (fileExists('my-app/package.json')) {
                        dir('my-app') {
                            sh 'npm test || echo "Tests failed"'
                        }
                    } else {
                        sh 'npm test || echo "Tests failed"'
                    }
                }
            }
        }
        stage('Build') {
            when { expression { return fileExists('my-app/package.json') || fileExists('package.json') } }
            steps {
                script {
                    if (fileExists('my-app/package.json')) {
                        dir('my-app') {
                            sh 'npm run build || echo "Build failed"'
                            echo "Build is successfully completed"
                        }
                    } else {
                        sh 'npm run build || echo "Build failed"'
                        echo "Build is successfully completed"
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo 'Starting application...'
                    sh '''
                    nohup npm start > app.log 2>&1 &
                    sleep 5
                    curl -Is http://localhost:3000 || echo "App is not responding"
                    '''

                    // Debugging
                    sh 'ps aux | grep node'
                    sh 'tail -n 20 app.log'

                    echo 'Starting ngrok for public access...'
                    sh '''
                    nohup ngrok http 3000 --region=in > ngrok.log 2>&1 &
                    sleep 5
                    curl -Is http://127.0.0.1:4040/api/tunnels || echo "Ngrok is not responding"
                    '''

                    // Fetch the actual ngrok URL
                    def ngrokUrl = sh(script: "curl -s http://127.0.0.1:4040/api/tunnels | jq -r '.tunnels[0].public_url'", returnStdout: true).trim()
                    echo "Ngrok is running at: ${ngrokUrl}"
                }
            }
        }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs for errors.'
        }
    }
}