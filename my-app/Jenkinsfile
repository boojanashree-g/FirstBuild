pipeline {
    agent any

    tools {
        nodejs 'NodeJS-18'  // Use the name you configured in Jenkins
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'Checking out source code...'
                cleanWs()  // Cleans workspace before fetching new code
                git branch: 'main', url: 'https://github.com/boojanashree-g/FirstBuild.git'
            }
        }

        stage('Setup Node.js') {
            steps {
                echo 'Using Node.js from Jenkins Plugin'
                sh 'node -v'
                sh 'npm -v'
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    if (fileExists('package.json')) {
                        echo 'Installing dependencies...'
                        sh 'npm ci'  // Faster and ensures clean install
                    } else {
                        error 'package.json not found! Aborting build.'
                    }
                }
            }
        }

        stage('Run Linting') {
            steps {
                sh 'npm run lint'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deployment step here'
                // Add deployment commands if needed
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs for errors.'
        }
    }
}
